    "icon": "https://raw.githubusercontent.com/adevinwild/nexus-res/HEAD/assets/logo.png",
    "files": [
        "dist"
    ],
    "browser": {
        "fs": false,
        "path": false
    },
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "peerDependencies": {},
