        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "nexus-res",
    "author": {
        "name": "adil",
        "github": "adevinwild",
        "twitter": "adevinwild"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/adevinwild/nexus-res"
    },
    "module": "dist/nexus-res.esm.js",
    "size-limit": [
        {
            "path": "dist/nexus-res.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/nexus-res.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^8.1.0",
        "husky": "^8.0.2",
        "prettier": "^2.8.1",
        "size-limit": "^8.1.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    }
